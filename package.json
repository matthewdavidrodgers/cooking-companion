{
  "name": "cooking-companion",
  "version": "0.0.1",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'src/**/*.tsx'",
    "start": "npm run server",
    "build-client": "cd ./src/client && webpack -p",
    "build-server": "tsc -p ./src/server",
    "build": "npm run build-client && npm run build-server",
    "client": "cd src/client && webpack-dev-server -w",
    "server": "node ./dist/server/server.js"
  },
  "dependencies": {
    "koa": "^2.5.3",
    "koa-static": "^5.0.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@types/koa": "^2.0.46",
    "@types/node": "^10.12.0",
    "@types/react": "^16.4.18",
    "awesome-typescript-loader": "^5.2.1",
    "html-webpack-plugin": "^3.2.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  }
}
